<h1 class="ui inverted segment center aligned medium icon header">
  <i class="circular comments icon inverted blue"></i>
  Welcome To MessageX...!!!
  <small><br><hr>
    A smart way of messaging
  </small>
</h1>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">

      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |s| %>

        <div class="field">
          <%= s.label :username %>
          <div class="ui left icon input">
            <%= s.text_field :username , placeholder: "Enter Username" %>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="field">
          <%= s.label :password %>
          <div class="ui left icon input">
            <%= s.password_field :password , placeholder: "Enter Password" %>
            <i class="lock icon"></i>
          </div>
        </div>

        <div class="field">
        <%= s.submit "Login" ,class:"ui blue submit button" %>
        </div>

      <% end %>


  </div>
  <div class="middle aligned column">
    <div class="ui big button">
      <i class="signup icon"></i>
      Sign Up
    </div>
  </div>
</div>
<div class="ui vertical divider">
  Or
</div>
</div>