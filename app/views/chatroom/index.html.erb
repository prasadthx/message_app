<h2 class="ui inverted segment center aligned medium icon header">
  <i class="circular coffee icon inverted teal"></i>
  Say Something
</h2>

<div class="ui grid">

  <div class="twelve wide column">

    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">

     <div class="ui inverted small feed" id="message-container">
       <h4 class="ui header">Followers Activity</h4>

       <%= render @messages  %>

     </div>
      </div>

      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path , remote: true) do |s| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= s.text_field :body , placeholder: "Enter a Message.." %>
              <%= s.button '<i class="bordered inverted edit icon circular"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
    <div class="ui inverted vertical menu">
     <a class="active item">
       Home
     </a>
      <a class="item">
       Messages
      </a>
  <a class="item">
    Friends
  </a>
</div>
      </div>
    </div>
  </div>

</div>